---
// src/components/VideoEmbed.astro
// Styled Google Drive video embed with terminal-style header and metadata.

interface Props {
  title: string;
  src: string;
  duration?: string;
  presenter?: string;
  source?: string;
  date?: string;
}

const { title, src, duration, presenter, source = 'Google Drive', date } = Astro.props;
---

<div class="video-container">
  <div class="video-header">
    <div class="video-dot red"></div>
    <div class="video-dot yellow"></div>
    <div class="video-dot green"></div>
    <span class="video-title">{title}</span>
  </div>
  <div class="video-embed">
    <iframe
      src={src}
      allow="autoplay; encrypted-media"
      allowfullscreen
    ></iframe>
  </div>
</div>

{(duration || presenter || date) && (
  <div class="video-meta">
    {duration && (
      <span class="video-meta-item">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/>
        </svg>
        ~{duration}
      </span>
    )}
    {presenter && (
      <span class="video-meta-item">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
          <circle cx="12" cy="7" r="4"/>
        </svg>
        Presenter: {presenter}
      </span>
    )}
    {date && (
      <span class="video-meta-item">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
          <line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/>
          <line x1="3" y1="10" x2="21" y2="10"/>
        </svg>
        {date}
      </span>
    )}
    <span class="video-meta-item">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
      </svg>
      {source}
    </span>
  </div>
)}
